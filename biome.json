{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignore": [
      ".git",
      ".cache",
      ".vscode",
      "**/*.json"
    ]
  },
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "rules": {
      "complexity": {
        "noThisInStatic": "off"
      },
      "suspicious": {
        "noExplicitAny": "warn"
      }
    }
  },
  "formatter": {
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 225,
    "attributePosition": "multiline"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  }
}
